<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="centered">
        <h1>MY CART</h1>
        <div class="cart">
            <% for (let item of items) { %>
            <div class="cart-item">
                <div>
                    <p><%= item.title %></p>
                    <p>$<%= item.price %></p>
                </div>
                <div>
                    <img src="<%= item.url %>" alt="<%= item.title %>" />
                </div>
            </div>
            <% } %>
        </div>
    </main>
<%- include('../includes/end.ejs') %>